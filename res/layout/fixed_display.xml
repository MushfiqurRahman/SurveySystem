<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fixed_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    
                    <TextView
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:text="Part 2: Fixed Display - Plan-o-gram and Quantity" />
	            
                </LinearLayout>
                
                <LinearLayout 
                    android:id="@+id/lay_fixed_display_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tbl_fixed_display" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    
                    <TextView 
		               android:layout_weight="1"
		               android:gravity="center"
		               android:text="SKU"
		               android:background="@drawable/table_header"/>
		           
		           <TextView 
		               android:background="@drawable/table_header"
		               android:gravity="center"
		               android:text="SKU Code"/>
		           
		           <TextView 
		               android:background="@drawable/table_header"
		               android:gravity="center"
		               android:text="SKU Count"/>
                </TableRow>

            </TableLayout>
            
                <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Next" />
            
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
